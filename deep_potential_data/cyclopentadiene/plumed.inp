# vim:ft=plumed
UNITS LENGTH=A TIME=fs
FLUSH STRIDE=1
DISTANCE ATOMS=10,12 NOPBC LABEL=d1 # the 9-11 basin
DISTANCE ATOMS=4,14  NOPBC LABEL=d2 # the 3-13 basin
COMMITTOR ...
   ARG=d1,d2
   FILE=STOPCAR
   BASIN_LL1=0.00,0.00
   BASIN_UL1=1.60,9.99
   BASIN_LL2=0.00,0.00
   BASIN_UL2=9.99,1.60
   BASIN_LL3=4.00,4.00
   BASIN_UL3=50.0,50.0
...
PRINT FILE=colvar ARG=d1,d2
