# vim:ft=plumed
UNITS LENGTH=A TIME=fs
FLUSH STRIDE=1
DISTANCE ATOMS=4,1 NOPBC LABEL=d1 # the fast basin
DISTANCE ATOMS=4,5 NOPBC LABEL=d2 # the slow basin
COMMITTOR ...
   ARG=d1,d2
   FILE=STOPCAR
   BASIN_LL1=3.00,0.00
   BASIN_UL1=9.99,2.00
   BASIN_LL2=0.00,3.00
   BASIN_UL2=2.00,9.99
...
PRINT FILE=colvar ARG=d1,d2
